<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white shadow-md p-8 rounded-lg">
    <!-- Formulário de Login (Sessão) -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="mb-4">
          <label class="flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox" %>
            <span class="ml-2 text-gray-600">Lembrar de mim</span>
          </label>
        </div>
      <% end -%>

      <div class="flex items-center justify-between">
        <%= f.submit "Entrar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
    <!-- Fim do Formulário de Login (Sessão) -->

    <div class="mt-4">
      <!-- Link para o formulário de registro de usuário -->
      <%= link_to "Novo Usuário? Cadastre-se aqui", new_user_registration_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>
<div class="text-center mt-4 text-gray-400">
  <%= render "devise/shared/links" %>
</div>