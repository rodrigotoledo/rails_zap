<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white shadow-md p-8 rounded-lg">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>
      
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Cadastre-se", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <div class="mt-4">
      <!-- Link para o formulário de registro de usuário -->
      <%= link_to "Já possui uma conta?", root_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>
<div class="text-center mt-4 text-gray-400">
  <%= render "devise/shared/links" %>
</div>