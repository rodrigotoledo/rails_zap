<div class="flex flex-col w-full relative h-screen ">
  <div class='flex flex-row justify-between sticky top-0 p-4 w-full items-center bg-[#1f2c32]'>
    <div class='flex flex-row items-center w-full'>
      <div class='w-12 h-12 rounded-full bg-sky-200 justify-center items-center flex mr-4'></div>

      <div class='flex flex-col'>
        <div class='text-white'><%=user_in_message(conversation).user.username%></div>
        <div class='text-[#aebac1] text-sm flex items-center'>
          Visto por Ãºltimo <%=l user_in_message(conversation).created_at, format: :short%>
        </div>
      </div>
    </div>

    <div class='text-right items-center flex justify-between'>
      <i class="material-icons text-[#aebac1] mr-4">search</i>
      <i class="material-icons text-[#aebac1]">more_vert</i>
    </div>
  </div>

  <%= turbo_stream_from "divs" %>
  <div class='w-full px-40 sm:px-4 overflow-y-auto h-screen mb-1 ' id="chat"  data-controller= "scroll">
    <%conversation.messages.each do |message| %>
      <%= render partial: 'messages/message', locals: {message: message, current_user: current_user} %>
    <% end %>
  </div>
  
  <div class='mb-2  bg-[#1f2c32] p-4 sticky w-full items-center '>
    <div class='w-full'>
      <div class='flex flex-row items-center justify-center'>
        <i class="material-icons text-[#aebac1] mx-2">mood</i>
        <i class="material-icons text-[#aebac1] pr-2 ">add</i>  
     
        <div class='mb-3 p-1 bg-[#2b3942] rounded-md flex flex-row items-center w-full'>  
          <turbo-frame id="your_frame_id">
             <div>
            <%=render partial: 'messages/form', locals: {conversation: conversation} %>
          </turbo-frame>  
            </div> 
        </div>
        <i class="material-icons text-[#aebac1] ml-2">mic</i>
    </div>
</div>

<div class="mt-1"></div>